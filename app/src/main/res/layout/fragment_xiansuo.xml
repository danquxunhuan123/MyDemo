<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_page_0"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blue_0"
            android:gravity="center"
            android:padding="15dp"
            android:text="新闻线索"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="新闻线索"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_white_solid"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_xiansuo1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_zrzh"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="自然灾害"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_xiansuo2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_tfsj"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="突然事件"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_xiansuo3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_ssjj"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="实时聚焦"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_xiansuo4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_wmgz"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="网民关注"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="新闻素材"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_white_solid"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_xiansuo5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_jqzc"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="近期政策"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_xiansuo6"
                android:layout_width="0dp"
