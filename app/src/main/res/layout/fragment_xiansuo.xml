                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_xiansuo7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_lsjt"
                android:drawablePadding="10dp"
